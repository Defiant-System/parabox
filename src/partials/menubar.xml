			<Menu name="Level 1" click="set-game-level" arg="3-1" check-group="game-level"/>
			<Menu name="Level 2" click="set-game-level" arg="3-2" check-group="game-level"/>
			<Menu name="Level 3" click="set-game-level" arg="3-3" check-group="game-level"/>
