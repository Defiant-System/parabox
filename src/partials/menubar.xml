			<Menu name="Level 8" click="set-game-level" arg="1-8" check-group="game-level"/>
			<Menu name="Level 9" click="set-game-level" arg="1-9" check-group="game-level"/>
		</Menu>
		<Menu name="World 2&#8230;">
			<Menu name="Level 1" click="set-game-level" arg="2-1" check-group="game-level"/>
